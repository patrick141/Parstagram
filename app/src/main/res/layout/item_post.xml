<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/userInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            tools:srcCompat="@drawable/ic_baseline_person_24" />

        <TextView
            android:id="@+id/tvUsername"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="rahul"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    </LinearLayout>

    <ImageView
        android:id="@+id/ivImage"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="5dp"
        tools:srcCompat="@tools:sample/avatars" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/likeView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/ufi_heart"/>

        <TextView
            android:id="@+id/likeC"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Likes" />

        <ImageView
            android:id="@+id/commentView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="5dp"
            app:srcCompat="@drawable/ufi_comment" />

        <ImageView
            android:id="@+id/directMView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="5dp"
            app:srcCompat="@drawable/ufi_new_direct"/>

        <ImageView
            android:id="@+id/savePostView"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginStart="242dp"
            android:layout_marginTop="3dp"
            app:srcCompat="@drawable/ufi_save" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Looking for studd" />

    <TextView
        android:id="@+id/timePosted"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="4hr ago"
        android:textSize="10sp"
        android:textStyle="italic" />

</LinearLayout>